<!-- Slider main container -->
<main>
  <div class='swiper mySwiper'>
    <div class='swiper-wrapper'>
      <div class='swiper-slide'>
        <img src='/banner00.jpg' alt='' />
      </div>
      <div class='swiper-slide'>
        <img src='/banner01.png' alt='' />
      </div>
      <div class='swiper-slide'>
